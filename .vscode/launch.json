    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost",

            "url": "http://localhost/index.html",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch scratch-gui in Chrome",

            "url": "http://localhost:8601", // note the port number!
            "webRoot": "/:", // map other / generated files to an impossible path
            "runtimeExecutable":"C:/Users/Yoyo/AppData/Local/Chromium/Application/chrome.exe"
        },
    ]
}
